% Inner ball initial conditions
x0 = -1; Vx0 = 5; y0 = 0;
Vy0 = 0;

run_time = 10;  % Length of sim

% Data points
x = zeros(1,run_time/equations.dt);
y = zeros(1,run_time/equations.dt);

% Initial conditions
x(1) = x0;
y(1) = y0;

theta = 0:0.01:2*pi;
circle_x = cos(theta);
circle_y = sin(theta);

for i = 2:numel(y)
    [y0, Vy0] = equations.get_y(y0, Vy0);
    [x0, Vx0] = equations.get_x(x0, Vx0);
    
    x(i) = x(i-1) + (Vx0*equations.dt);
    y(i) = y(i-1) + (Vy0*equations.dt);
    
    if x(i)^2 + y(i)^2 > 1
        [Vx0, Vy0] = equations.rebound_fixed_outer(Vx0, Vy0, x(i), y(i));
        x(i) = x(i-1) + (Vx0*equations.dt);
        y(i) = y(i-1) + (Vy0*equations.dt);
    end
    
    
end

hold on
plot(x,y)
plot(circle_x, circle_y)
ylim([-1.5 1.5]);
xlim([-1.5 1.5]);
pbaspect([1 1 1]);
hold off